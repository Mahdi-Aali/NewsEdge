@model IEnumerable<IdentityRole<long>>
@{
    Layout = "";
    int rowNumber = 1;
}


<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title-wrap bar-success">
                <h4 class="card-title">سطوح دسترسی</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="card-block">
                <table class="table table-responsive-md text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>عنوان</th>
                            <th>اقدامات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (IdentityRole<long> role in Model)
                        {
                            <tr>
                                <td>@rowNumber</td>
                                <td>@role.Name</td>
                                <td>
                                    <a class="success p-0" data-original-title="Edit role" title="Edit" onclick="EditRole(@role.Id)">
                                        <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                    </a>
                                    <a class="danger p-0" data-original-title="Delete Role" title="Delete" onclick="DeleteRole(@role.Id)">
                                        <i class="fa fa-trash-o font-medium-3 mr-2"></i>
                                    </a>
                                </td>
                            </tr>
                            _ = rowNumber++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>